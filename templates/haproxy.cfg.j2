global
   log     127.0.0.1 local2
   chroot  /var/lib/haproxy
   pidfile /var/run/haproxy.pid
   maxconn 4000
   user    haproxy
   group   haproxy
   daemon
   stats   socket /var/lib/haproxy/stats

defaults
   mode    http
   log     global
   option  httplog
   option  dontlognull
   option  http-server-close
   option  forwardfor except 127.0.0.0/8
   option  redispatch
   retries 3
   timeout http-request    10s
   timeout queue           1m
   timeout connect         10s
   timeout client          1m
   timeout server          1m
   timeout http-keep-alive 10s
   timeout check           10s
   maxconn 3000

frontend fe
   bind *:{{ haproxy['frontend_port'] }}

backend be
   balance roundrobin
{% for backend_host in haproxy['backend_host'] %}
   server be{{ backend_host['id'] }} {{ backend_host['host'] }}:{{ backend_host['port'] }} check
{% endfor %}

listen stats :{{ haproxy['stats']['port'] }}
   mode http
   stats enable
   stats realm Haproxy\ Statistics
   stats uri /
   stats auth {{ haproxy['stats']['user'] }}:{{ haproxy['stats']['pass'] }}
